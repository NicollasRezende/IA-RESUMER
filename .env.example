# Configurações do Whisper
WHISPER_MODEL=small              # tiny, base, small, medium, large
WHISPER_DEVICE=cpu              # cpu ou cuda
WHISPER_LANGUAGE=pt             # Código do idioma (pt, en, es, etc)
WHISPER_FP16=False              # Usar FP16 (apenas para GPU)
WHISPER_VERBOSE=False           # Modo verbose do Whisper

# Configurações de Performance
BATCH_SIZE=1                    # Tamanho do batch para processamento
NUM_WORKERS=4                   # Número de workers para processamento paralelo
CACHE_ENABLED=True              # Habilitar cache de resultados
CACHE_TTL=3600                  # Tempo de vida do cache em segundos

# Configurações de Log
LOG_LEVEL=INFO                  # DEBUG, INFO, WARNING, ERROR, CRITICAL

